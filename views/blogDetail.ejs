<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title><%= blogDetail ? blogDetail.title : "Blog Not Found" %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2.2rem;
            color: #070738;
            text-align: center;
            margin-bottom: 20px;
        }

        .image-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .blog-meta {
            font-size: 14px;
            color: gray;
            margin-bottom: 8px;
        }

        .blog-image {
            width: 100%;
            max-width: 600px;
            max-height: 300px;
            border-radius: 6px;
            object-fit: cover;
            display: block;
        }

        /* .blog-content {
            font-size: 18px;
            line-height: 1.8;
            text-align: justify;
        } */

        pre {
            background-color: #f4f4f4;
            padding: 15px;
            border-radius: 5px;
            overflow-x: auto;
            font-size: 16px;
            white-space: pre-wrap;
        }

        code {
            font-family: 'Courier New', monospace;
            color: #d63384;
        }

        /* .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            font-size: 16px;
        } */

        .login-status {
            text-align: right;
            margin-bottom: 10px;
            font-size: 14px;
        }

        .comments-container {
            margin-top: 30px;
        }

        .comment {
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .comment img {
            border-radius: 50%;
        }

        .comment strong {
            color: #333;
        }

        .comment-form input {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .comment-form button {
            margin-top: 10px;
            padding: 8px 12px;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .comment-form button:hover {
            background: #0056b3;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>
    <div class="container">
        <div class="login-status">
            <% if (user) { %>
                <p>Welcome, <strong><%= user.fullname %></strong></p>
            <% } else { %>
                <p><a href="/login">Login</a> to add a blog</p>
            <% } %>
        </div>

        <% if (blogDetail) { %>
            <h1><%= blogDetail.title %></h1>
            <div class="image-wrapper">
                <p class="blog-meta">Published on <%= new Date(blogDetail.createdAt).toDateString() %></p>
                <% if (blogDetail.coverImageUrl) { %>
                    <img src="<%= blogDetail.coverImageUrl %>" class="blog-image" alt="Blog Image">
                <% } %>
            </div>
            <div class="mt-2">
                <% if (blogDetail.createdBy) { %>
                    <img src="<%= blogDetail.createdBy.profileImageURL %>" width="40px" alt="Author Image">
                    <p><strong>Author:</strong> <%= blogDetail.createdBy.fullname %></p>
                <% } %>
            </div>
            <div class="blog-content">
                <pre>
                    <%- blogDetail.body.replace(/```([\s\S]*?)```/g, '<pre><code>$1</code></pre>') %>
                </pre>
            </div>
            <div class="comments-container">
                <h1>Comments</h1>
                <% if (user) { %>
                    <form class="comment-form" action="/blogDetail/comment/<%= blogDetail._id %>" method="POST">
                        <input type="text" name="content" placeholder="Enter your comment" required />
                        <button type="submit">Add Comment</button>
                    </form>
                <% } else { %>
                    <p><a href="/login">Login</a> to add a comment.</p>
                <% } %>
                <% if (blogDetail.comments && blogDetail.comments.length > 0) {     %>
                    <div class="comments-list">
                        <% blogDetail.comments.forEach(comment => { %>
                            <div class="comment">
                                <img src="<%= comment.createdBy.profileImageURL %>" width="50px" alt="User Image">
                                <p><strong><%= comment.createdBy.fullname %></strong>: <%= comment.content %></p>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p>No comments yet. Be the first to comment!</p>
                <% } %>
            </div>
        <% } else { %>
            <h1>Blog Not Found</h1>
            <p>Sorry, the blog post you are looking for does not exist.</p>
        <% } %>
        <a href="/" class="back-link">‚Üê Back to Home</a>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>
